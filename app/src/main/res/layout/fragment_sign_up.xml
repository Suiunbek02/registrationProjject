<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/purpul"
    tools:context=".ui.fragments.sign.up.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edit_registration"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/name_bottom"
            android:textColor="@color/teal_700"
            android:hint="@string/tomasgadji_gmail_com"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="35dp"
            android:layout_marginStart="10dp"
            android:layout_height="35dp"
            android:background="@drawable/account"
            app:layout_constraintStart_toStartOf="@id/edit_registration"
            app:layout_constraintTop_toTopOf="@id/edit_registration"
            app:layout_constraintBottom_toBottomOf="@id/edit_registration"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo" />

        <Button
            android:id="@+id/btn_registration"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:text="registration"
            android:layout_marginTop="25dp"
            android:background="@drawable/registration_btn"
            app:layout_constraintTop_toBottomOf="@id/edit_registration"
            app:layout_constraintStart_toStartOf="@id/edit_registration"
            app:layout_constraintEnd_toEndOf="@id/edit_registration"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>