<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purpul"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.sign.in.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/moon"
            app:layout_constraintBottom_toTopOf="@id/enter_name"
            android:contentDescription="@string/todo" />

        <EditText
            android:id="@+id/enter_name"
            android:layout_width="360dp"
            android:layout_height="57dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/name_bottom"
            android:backgroundTint="@color/teal_700"
            android:layout_marginBottom="25dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="15dp"
            android:gravity="start|center"
            android:inputType="textPersonName"
            android:hint="@string/enter_name"/>

        <EditText
            android:id="@+id/enter_password"
            android:layout_width="360dp"
            android:layout_height="57dp"
            android:padding="15dp"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/enter_name"
            android:backgroundTint="@color/teal_700"
            app:layout_constraintEnd_toEndOf="@id/enter_name"
            android:background="@drawable/name_bottom"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/enter_name"
            android:gravity="start|center"
            android:textColor="@color/black"
            android:hint="@string/enter_password"
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/sign_in_bottom"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@id/enter_password"
            app:layout_constraintStart_toStartOf="@id/enter_password"
            android:backgroundTint="@color/glass_color"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/enter_password"
            android:gravity="center"
            android:text="entrance"/>

        <Button
            android:id="@+id/sign_up_bottom"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/sign_in_bottom"
            android:layout_marginBottom="25dp"
            app:layout_constraintStart_toStartOf="@id/sign_in_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/teal_200"
            android:backgroundTint="@color/transparent"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/Registration"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>